@model IEnumerable<pesazangu.Models.CompareResultViewModel>

<div id="divCompareResult" class="table-responsive" style="margin-top:10px">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Vendor</th>
                <th scope="col">Product</th>
                <th scope="col">Loan Amount</th>
                <th scope="col">Repayable Amount</th>
                <th scope="col">Max Days</th>
                <th scope="col">Score</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.VendorName</td>
                    <td>@item.ProductShortDesc</td>
                    <td>@item.LoanAmount</td>
                    <td>@item.RepayableAmount.ToString("#.00")</td>
                    <td>@item.MaxRepaymentPeriodInDays</td>
                    <td>@item.Score.ToString("#.00")</td>
                </tr>
            }
        </tbody>
    </table>
</div>